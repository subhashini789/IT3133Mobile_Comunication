03.
//
let number = 4562;
let digits = num.toString().split("").map(Number);
console.log(digits);

//
let num = 4562;
let digits = [];

while(num > 0){
	digits.unshift(num % 10);
	num = Math.floor(num / 10);
}

console.log(digits);

//
let num = 4562;
let digits = [..num.toString()].map(Number);
console.log(digits);
