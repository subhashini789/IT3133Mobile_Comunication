04.
let matrix = [
[1,2],
[3,4]
];
let k = 3;

let scaleMatrix = [];

for(let i = 0; i < matrix.length; i++){
	scaleMatrix[i] = [];
	for(let j = 0; j < matrix[i].length;j++){
		scaleMatrix[i][j] = matrix[i][j]*k;
	}	
}
console.log(scaleMatrix);
