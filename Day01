06.
function print2DArray(arr){
 for(let i = 0; i < arr.length; i++){
	 for(let j = 0; j < arr.legth; j++){
		 console.log(arr[i][j]);
	 }
 }
}

let matrix = [
[1,2],
[3,4]
];

print2DArray(matrix);





